<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/infotable_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
   		android:id="@+id/name_label"
   		android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
       	android:text="Name: "
       	android:padding="3dip"/>
    <TextView
   		android:id="@+id/name_value"
   		android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
       	android:text="xxxx"
       	android:padding="3dip" 
       	android:layout_toRightOf="@+id/name_label"/>

    <TextView
   		android:id="@+id/battery_label"
   		android:layout_width="wrap_content" 
        android:layout_height="wrap_content"        	
       	android:text="Battery: "
       	android:padding="3dip"
       	android:layout_below="@+id/name_label"/>
    <TextView
   		android:id="@+id/battery_value"
   		android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="xxxx"
        android:padding="3dip"
       	android:layout_toRightOf="@+id/battery_label"
       	android:layout_below="@+id/name_value"/>
  	
	<TableLayout
		android:id="@+id/sensor_table"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:stretchColumns="*"
	    android:layout_below="@+id/battery_label"
	    android:paddingTop="5px">
		
		<View
	        android:layout_height="2dip"
	        android:background="#FF909090" />
	
		<!-- LIGHT VALUES -->
	    <TableRow android:layout_span="5">
	        <TextView
	        	android:id="@+id/light_label"
	            android:layout_column="2"      
	            android:text="LIGHT VALUES"
	            android:gravity="center"/>
	    </TableRow>
	
	    <TableRow android:layout_span="5"  >
	        <TextView android:id="@+id/light_left_label" android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center" android:text="Left"></TextView>
	        <TextView
	        	android:id="@+id/light_center_label"
	            android:layout_column="2" 
	            android:text="Center"
	            android:gravity="center" />
	        <TextView
	        	android:id="@+id/light_right_label"
	            android:layout_column="4" 
	            android:text="Right"
	            android:gravity="center" />
	    </TableRow>
	    
	    <TableRow android:layout_span="5"  >
	            <TextView
	        	android:id="@+id/light_right_value"
	            android:layout_column="0"  
	            android:text="xxxx"
	            android:gravity="center" />
	        <TextView
	        	android:id="@+id/light_center_value"
	            android:layout_column="2" 
	            android:text="xxxx"
	            android:gravity="center" />
	        <TextView
	        	android:id="@+id/light_left_value"
	            android:layout_column="4" 
	            android:text="xxxx"
	            android:gravity="center" />
	    </TableRow>
	    
	    <View
	        android:layout_height="2dip"
	        android:background="#FF909090" />
	    
	    <!-- OBSTACLE VALUES --> 
	    <TableRow android:layout_span="5">
	        <TextView
	        	android:id="@+id/obstacle_label"
	            android:layout_column="2"        
	            android:text="OBSTACLE VALUES"
	            android:gravity="center"/>
	    </TableRow>
	
	    <TableRow android:layout_span="5">
	        <TextView
	            android:id="@+id/obstacle_left_label"
	            android:layout_column="0"
	            android:text="Left"
	            android:gravity="center" />
	        <TextView
	        	android:id="@+id/obstacle_center_label"
	            android:layout_column="2"
	            android:text="Center"
	            android:gravity="center" />
	        <TextView
	        	android:id="@+id/obstacle_right_label"
	            android:layout_column="4"
	            android:text="Right"
	            android:gravity="center" />
	    </TableRow>
	    
	    <TableRow android:layout_span="5">
	        <TextView
	        	android:id="@+id/obstacle_right_value"
	            android:layout_column="0"
	            android:text="xxxx"
	            android:gravity="center" />
	        <TextView
	        	android:id="@+id/obstacle_center_value"
	            android:layout_column="2"
	            android:text="xxxx"
	            android:gravity="center" />
	        <TextView
	        	android:id="@+id/obstacle_left_value"
	            android:layout_column="4"
	            android:text="xxxx"
	            android:gravity="center" />
	    </TableRow>
	
	   <View
	        android:layout_height="2dip"
	        android:background="#FF909090" />
	
		<!-- IR Values -->
	    <TableRow android:layout_span="5">
	        <TextView
	        	android:id="@+id/obstacle_label"
	            android:layout_column="2"        
	            android:text="IR VALUES"
	            android:gravity="center"/>
	    </TableRow>
	
	    <TableRow>
	        <TextView
	            android:id="@+id/ir_left_label"
	            android:layout_column="1"
	            android:text="Left"
	            android:gravity="center" />
	        <TextView
	        	android:id="@+id/ir_right_label"
	            android:layout_column="3"
	            android:text="Right"
	            android:gravity="center" />
	    </TableRow>
	    
	    <TableRow>
	        <TextView
	        	android:id="@+id/ir_right_value"
	            android:layout_column="1"
	            android:text="xxxx"
	            android:gravity="center" />
	        <TextView
	        	android:id="@+id/ir_left_value"
	            android:layout_column="3"
	            android:text="xxxx"
	            android:gravity="center" />
	    </TableRow>   
	    
	    <!-- Line Values -->
	    <View
	        android:layout_height="2dip"
	        android:background="#FF909090" />
	        
	    <TableRow android:layout_span="5">
	        <TextView
	        	android:id="@+id/line_label"
	            android:layout_column="2"        
	            android:text="LINE VALUES"
	            android:gravity="center"/>
	    </TableRow>
	    
	    <TableRow>
	        <TextView
	        	android:id="@+id/line_left_label"
	            android:layout_column="1"
	            android:text="Left"
	            android:gravity="center" />
	        <TextView
	        	android:id="@+id/line_right_label"
	            android:layout_column="3"
	            android:text="Right"
	            android:gravity="center" />
	    </TableRow>  	
	
	    <TableRow>
	        <TextView
	            android:id="@+id/line_left_value"
	            android:layout_column="1"
	            android:text="xxxx"
	            android:gravity="center" />
	        <TextView
	        	android:id="@+id/line_right_value"
	            android:layout_column="3"
	            android:text="xxxx"
	            android:gravity="center" />
	    </TableRow>     
	    
	    <View
	        android:layout_height="2dip"
	        android:background="#FF909090" />	    

	<ToggleButton 
		android:text="Toggle Timer"
		android:id="@+id/toggleTimer" 
		android:layout_below="@+id/sensor_table"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	</TableLayout>
</RelativeLayout>  
 